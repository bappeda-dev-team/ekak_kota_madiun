<%= content_for :html_title, "Renstra" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Laporan</li>
  <li class="breadcrumb-item active" aria-current="page">Renstra</li>
<% end %>
<% content_for :view_utama do %>
  <% if cookies[:tahun] && cookies[:opd] %>
    <div class="card border-0 shadow" data-controller="page-ajax"
     data-page-ajax-url-value="<%= laporan_renstra_index_path(periode: @periode) %>" >
      <div data-page-ajax-target="results">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">Laporan Renstra</h2>
            </div>
          </div>
        </div>
        <%= render(LoaderComponent.new) %>
      </div>
    </div>
  <% else %>
    <%= render 'shared/pilih_tahun_dan_opd' %>
  <% end %>
  <%= render 'shared/modal_template', modal_name: 'laporan-renstra' %>
<% end %>
