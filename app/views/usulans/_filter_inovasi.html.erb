<div class="card-body" id="tujuan-kota-card">
    <div class="d-grid gap-4">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="fs-5 fw-bold mb-0">Program Unggulan Walikota Tahun <%= @tahun %> - <%= @opd %></h2>
            </div>
            <div class="col-auto">
                <%= link_to cetak_program_unggulans_usulans_path(tahun: @tahun,
                                                                 kode_opd: @kode_opd),
                            class:"m-3 btn btn-outline-danger",
                            target: "_blank", rel: "noopener" do %>
                    <span class="far fa-file-pdf me-2"></span>
                    Cetak Laporan Program Unggulan Walikota
                <% end %>
            </div>
        </div>
        <div class="table-responsive mb-5">
            <table class="table table-bordered table-hover">
                <caption class="caption-top fw-bold"><small>*warna biru bisa tambah kolaborator</small></caption>
                <thead>
                    <tr>
                        <th class="fw-bolder" width="20px">No.</th>
                        <th class="fw-bolder text-center">Program Unggulan Walikota</th>
                        <th class="fw-bolder text-center">Asta Karya</th>
                        <th class="fw-bolder text-center">Misi Walikota</th>
                        <th class="fw-bolder text-center" style="min-width: 300px;">Uraian 100 Hari Kerja</th>
                        <th class="fw-bolder text-center" style="min-width: 200px;">OPD</th>
                        <th class="fw-bolder text-center">Pohon Kinerja</th>
                        <th class="fw-bolder text-center">Rencana Kinerja</th>
                        <th class="fw-bolder text-center">Pemilik Rencana Kinerja</th>
                        <th class="fw-bolder text-center">Sub Kegiatan</th>
                        <th class="fw-bolder text-center">Program</th>
                        <th class="fw-bolder text-center">Pagu Rencana Kinerja</th>
                        <th class="fw-bolder text-center">Inovasi</th>
                        <th class="fw-bolder text-center">Action</th>
                        <th class="fw-bolder text-center" style="min-width: 300px;">Uraian Program Unggulan</th>
                        <th class="fw-bolder text-center">Keterangan</th>
                    </tr>
                </thead>
                <% @inovasis.each.with_index(1) do |inovasi, no| %>
                    <%= render 'row_inovasi', inovasi: inovasi, no: no %>
                <% end %>
                <tfoot class="hide">
                    <tr>
                        <td colspan="11">Total Pagu</td>
                        <td class="text-gray-900 px-3" style="min-width: 150px;"><%= number_to_currency(@total_pagu, unit: "Rp. ", separator: ".") %></td>
                        <td colspan="4"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
