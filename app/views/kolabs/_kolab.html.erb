<% ada_rekin = kolab.kolaborator_mengisi_rekin? %>
<table class="table table-bordered mb-3 <%= ada_rekin ? 'table-success' : 'table-danger' %>" id="<%= dom_id(kolab) %>">
  <tr>
    <td class="text-start" width="20px">Kolaborasi Dengan</td>
    <td class="fw-bolder text-gray-500 text-wrap text-start"><%= kolab.opd %></td>
    <td class="text-wrap">
      <% unless ada_rekin %>
        <div class="d-grid">
          <%= render(DeleteButtonAjaxComponent.new(path: kolab_path(kolab),
                                                   model: kolab,
                                                   text: 'Hapus kolaborasi?')) %>
        </div>
      <% end %>
    </td>
  </tr>
  <tr>
    <td class="text-start" width="20px">Jumlah Rekin</td>
    <td class="fw-bolder text-gray-500 text-wrap text-start" colspan="2"><%= kolab.jumlah_rekin_opd %></td>
  </tr>
  <tr>
    <td class="text-start" width="20px">Keterangan</td>
    <td class="fw-bolder text-gray-500 text-wrap text-start" colspan="2"><%= kolab.keterangan %></td>
  </tr>
</table>
