<%= form_with(model: mandatori,
              local: false,
              data: {
                controller: 'form-ajax',
                form_ajax_target_param: dom_id(mandatori),
                form_ajax_type_param: mandatori.new_record? ? 'afterbegin' : '',
                action: 'ajax:complete->form-ajax#processAjax'
              }) do |form| %>
  <% if mandatori.errors.any? %>
    <div id="error_explanation">
      <h2>Terdapat <%= mandatori.errors.count %> kesalahan :</h2>
      <ol>
        <% mandatori.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ol>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :opd, class: 'form-label' %>
    <%= form.text_field :opd, class: 'form-control', readonly: true %>
  </div>
  <div class="field">
    <%= form.label :nip, class: 'form-label' %>
    <%= form.text_field :nip_asn, class: 'form-control', readonly: true %>
  </div>
  <div class="field">
    <%= form.label :tahun, class: 'form-label' %>
    <%= form.text_field :tahun, class: 'form-control disabled', readonly: true %>
  </div>
  <div class="field">
    <%= form.label :usulan, class: 'form-label' %>
    <%= form.text_area :usulan, class: 'form-control', placeholder: 'isikan usulan mandatori' %>
  </div>
  <div class="field">
    <%= form.label :peraturan_terkait, class: 'form-label' %>
    <%= form.text_area :peraturan_terkait, class: 'form-control', placeholder: 'isikan peraturan mandatori' %>
  </div>
  <div class="field">
    <%= form.label :uraian, class: 'form-label' %>
    <%= form.text_area :uraian, class: 'form-control', placeholder: 'isikan uraian / penjabaran peraturan' %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
