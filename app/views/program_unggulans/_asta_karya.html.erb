<div class="card-body" id="tujuan-kota-card">
  <div class="d-grid gap-4">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="fs-5 fw-bold mb-0">Asta Karya Periode <%= "#{@tahun_awal} - #{@tahun_akhir}" %></h2>
      </div>
      <% unless guest? %>
        <div class="col-auto">
          <%= link_to new_program_unggulan_path(periode: @periode.id),
                      remote: true,
                      data: {
                        controller: 'form-modal',
                        action: 'ajax:complete->form-modal#success:prevent',
                        bs_toggle: 'modal',
                        bs_target: '#form-modal'
                      },
                      class: 'btn btn-sm btn-primary' do %>
            <i class="fas fa-plus me-2"></i>
            <span>Tambah Asta Karya</span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="table-responsive mb-5">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="fw-bolder" rowspan="2" width="20px">No.</th>
            <th class="fw-bolder">Asta Karya</th>
            <th class="fw-bolder">Periode</th>
            <th class="fw-bolder">Keterangan</th>
            <th class="fw-bolder text-center">Aksi</th>
          </tr>
        </thead>
        <tbody id="new_program_unggulan">
          <%= render partial: 'program_unggulans/program_unggulan', collection: @program_unggulans, as: :program_unggulan %>
        </tbody>
      </table>
    </div>
  </div>
</div>
