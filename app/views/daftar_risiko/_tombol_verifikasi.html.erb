<% if eselon_x?('eselon_3', 'admin', 'super_admin') %>
  <% if show_sasaran.tahapan_mr? %>
    <% if show_sasaran.status_dampak_resiko.present? && show_sasaran.rincian.valid_manrisk? %>
      <%= link_to sasaran_program_opd_verifikasi_dampak_resiko_path(show_sasaran, nomor_sasaran: nomor, laporan: laporan),
                  remote: true,
                  data: {
                    controller: 'form-modal',
                    action: 'ajax:complete->form-modal#success:prevent',
                    bs_toggle: 'modal',
                    bs_target: '#form-modal'
                  },
                  class: 'btn btn-secondary' do %>
        <i class="fas fa-exclamation-triangle me-2"></i>
        <span>Verifikasi Ulang</span>
      <% end %>
      <% if show_sasaran.dampak_resiko_setuju? %>
        <button class="btn btn-success text-white">
          Status Verifikasi: <%= show_sasaran.status_dampak_resiko %>
        </button>
      <% else %>
        <button class="btn btn-danger">
          Status Verifikasi: <%= show_sasaran.status_dampak_resiko %>
        </button>
      <% end %>
    <% else %>
      <% if show_sasaran.rincian.valid_manrisk? %>
        <%= link_to sasaran_program_opd_verifikasi_dampak_resiko_path(show_sasaran, nomor_sasaran: nomor, laporan: laporan),
                    remote: true,
                    data: {
                      controller: 'form-modal',
                      action: 'ajax:complete->form-modal#success:prevent',
                      bs_toggle: 'modal',
                      bs_target: '#form-modal'
                    },
                    class: 'btn btn-success' do %>
          <i class="fas fa-check me-2"></i>
          <span>Verifikasi</span>
        <% end %>
      <% else %>
        <p class="alert alert-danger">
          Belum terdapat PETA RISIKO hubungi pelaksana
        </p>
      <% end %>
    <% end %>
  <% else %>
    <p class="alert alert-warning">
      Belum terdapat RTP-KAK - Klik RTP-KAK untuk input
    </p>
  <% end %>
  <hr />
<% end %>
