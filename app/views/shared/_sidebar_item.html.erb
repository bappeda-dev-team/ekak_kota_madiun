<li class="nav-item">
  <span class="nav-link d-flex justify-content-between align-items-center collapsed"
          aria-expanded="false"
          data-bs-toggle="collapse" data-bs-target="#<%= target %>">
    <span>
      <span class="sidebar-text"><%= title %></span>
    </span>
    <span class="link-arrow">
      <i class="fas fa-angle-right icon icon-sm"></i>
    </span>
  </span>
  <div class="multi-level collapse"
         data-sidebar-target="item"
         aria-expanded="false"
         role="list" id="<%= target %>">
    <ul class="flex-column nav">
      <% items.each do |item| %>
        <% if item[:multi] %>
            <%= render partial: 'shared/nav_item', locals: { item: item } %>
        <% else %>
          <li class="nav-item" >
            <%= active_link_to(item[:href], wrap_tag: :li, wrap_class: 'nav-item',class: "nav-link", active: :exact) do %>
              <span class="sidebar-icon">
                <i class="<%= item[:icon] %> icon icon-xs me-2"></i>
              </span>
              <span>
                <span class="sidebar-text"><%= item[:title] %></span>
              </span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</li>
