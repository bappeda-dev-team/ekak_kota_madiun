<div class="card border-0 shadow">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h5><%= title %></h5>
      </div>
      <div class="col-auto">
        <div class="text-end">
          <strong><%= local_assigns[:sub_title] %></strong>
        </div>
        <div class="text-end">
          <strong><%= local_assigns[:sub_title_2] %></strong>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body p-3">
    <div class="d-grid gap-4">
      <%= yield %>
    </div>
  </div>
</div>
