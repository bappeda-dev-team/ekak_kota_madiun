<div class="card border-2 shadow mb-3">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h5><%= title %></h5>
      </div>
      <div class="col-auto">
        <div class="text-end">
          <strong><%= local_assigns[:sub_title] %></strong>
        </div>
        <div class="text-end">
          <strong><%= local_assigns[:sub_title_2] %></strong>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body border-5">
    <%= yield %>
  </div>
</div>
<div id="render-results">
  <div class="d-flex align-items-center justify-content-center">
    <p class="alert alert-info w-100">
      <span class="fw-bolder"><%= warning_sign %></span>
    </p>
  </div>
</div>
