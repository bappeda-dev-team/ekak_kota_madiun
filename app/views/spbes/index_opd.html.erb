<%= content_for :html_title, "Peta Rencana SPBE" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Perencanaan OPD</li>
  <li class="breadcrumb-item active" aria-current="page">Peta Rencana SPBE</li>
<% end %>
