<% presenter = PohonKinerjaPresenter.new(pohon) %>
<% show_button = local_assigns.fetch(:show_button, true) %>
<% unless presenter.dari_kota? %>
  <li>
    <div class="tf-nc pokin <%= presenter.warna_pohon %>" id="<%= dom_id(pohon) %>">
      <%= render partial: 'pohon_kinerja_opds/item_pohon', locals: { pohon: pohon, show_button: show_button } %>
    </div>
    <%# self-render childs in helper %>
    <ul class='d-none childs'>
      <%= render partial: 'pohon_kinerja_opds/pohon_kinerja_opd', collection: childs(pohon), as: :pohon, locals: { show_button: show_button } %>
    </ul>
  </li>
<% end %>
