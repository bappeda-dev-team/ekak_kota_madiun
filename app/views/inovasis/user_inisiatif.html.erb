<%= content_for :html_title, "Inisiatif Walikota" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Perencanaan</li>
  <li class="breadcrumb-item" aria-current="page">Usulan</li>
  <li class="breadcrumb-item active" aria-current="page">Inisiatif Walikota</li>
<% end %>
<% content_for :view_utama do %>
  <div class="card border-0 shadow">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Usulan Inisiatif Walikota Tahun <%= @tahun %></h2>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered counter">
          <thead class="thead-light">
            <tr>
              <th class="border-bottom text-gray-700" scope="col">No.</th>
              <th class="border-bottom text-gray-700" scope="col">Tahun</th>
              <th class="border-bottom text-gray-700" scope="col" style="min-width: 500px">Program Unggulan Walikota</th>
              <th class="border-bottom text-gray-700" scope="col">ASTA KARYA</th>
              <th class="border-bottom text-gray-700" scope="col" style="min-width: 500px;">Misi Walikota</th>
              <th class="border-bottom text-gray-700" scope="col">Tagging</th>
              <th class="border-bottom text-gray-700" scope="col" style="min-width: 300px">Uraian 100 Hari Kerja</th>
              <th class="border-bottom text-gray-700" scope="col" style="min-width: 300px">Uraian</th>
              <th class="border-bottom text-gray-700" scope="col">Pengusul</th>
              <th class="border-bottom text-gray-700" scope="col">Opd Lead</th>
              <th class="border-bottom text-gray-700 text-center" scope="col">Status</th>
              <th class="border-bottom text-gray-700 text-center" scope="col">Action</th>
            </tr>
          </thead>
          <tbody id="new_inovasi">
            <%= render @inovasis %>
          </tbody>
          <caption>
            <small>Keterangan Status</small>
            <ul>
              <li><small>Siap digunakan: Dapat dipilih di rencana kinerja</small></li>
              <li><small>aktif: Sudah dipilih di rencana kinerja</small></li>
            </ul>
          </caption>
        </table>
      </div>
    </div>
  </div>
<% end %>
