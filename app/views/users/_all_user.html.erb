<div class="card border-0 shadow">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="fs-5 fw-bold mb-0">Daftar Pengguna Aplikasi</h2>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-border table-flush counter" data-datatable id="data-table">
        <thead class="thead-light">
          <tr>
            <th class="border" scope="col">No.</th>
            <th class="border" scope="col">Nama</th>
            <th class="border" scope="col">Username / NIP</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr id="<%= dom_id(user) %>">
              <td class="text-gray-900 border fw-bolder" scope="row"></td>
              <td class="fw-bolder text-gray-500 text-wrap">
                <%= user.nama %>
              </td>
              <td class="fw-bolder text-gray-500 text-wrap">
                <%= user.nik %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
