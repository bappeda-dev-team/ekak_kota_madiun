<%= content_for :html_title, "Bab 2 - Capaian IKU" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Substansi Renstra</li>
  <li class="breadcrumb-item" aria-current="page">Bab 2</li>
  <li class="breadcrumb-item active" aria-current="page">Capaian IKU</li>
<% end %>
<% content_for :view_utama do %>
  <%= render 'shared/card_layout', title: "Capaian IKU - Periode #{@tahun_awal}-#{@tahun_akhir}" do %>
    <div class="table-responsive">
      <table class="table align-items-center">
        <thead class="thead-tujuan">
          <tr class="header-tujuan">
            <th class="border" scope="col" width="20px">No.</th>
            <th class="border" scope="col">Indikator Kinerja sesuai Tugas dan Fungsi Perangkat Daerah</th>
            <th class="border" scope="col" width="50px">Target NSPK</th>
            <th class="border" scope="col" width="50px">Target IKK/IKD</th>
            <th class="border" scope="col" width="50px">Target Indikator Lainnya</th>
          </tr>
        </thead>
        <tbody>
          <% @iku_opd.each.with_index(1) do |indikator, no_iku| %>
            <tr>
              <td class="text-gray-900 text-wrap border" width='20px' scope="row"><%= no_iku %></td>
              <td class="text-gray-900 text-wrap border"><%= indikator || '-' %></td>
              <% if indikator.class.name == 'IndikatorSasaran' %>
                <td class="text-gray-900 text-wrap border"><%= indikator.target_satuan %></td>
                <td class="text-gray-900 text-wrap border">IKK IKD</td>
                <td class="text-gray-900 text-wrap border">LAINNYA</td>
              <% else %>
                <% target = indikator.targets.find_by(tahun: @tahun_bener) %>
                <td class="text-gray-900 text-wrap border"><%= target.target %></td>
                <td class="text-gray-900 text-wrap border"><%= target.satuan %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
