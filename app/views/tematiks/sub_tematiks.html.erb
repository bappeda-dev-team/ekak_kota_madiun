<%= content_for :html_title, "Sub-Tematik Kota" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Perencanaan Kota</li>
  <li class="breadcrumb-item active" aria-current="page">Sub-Tematik Kota</li>
<% end %>
<% content_for :view_utama do %>
  <div class="card border-0 shadow">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Sub-Tematik Kota Tahun <%= @tahun %></h2>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered align-items-center border">
          <thead class="thead-light sticky-top">
            <tr>
              <th class="text-gray-700">No</th>
              <th class="text-center text-gray-700">Tema / Sub-Tema</th>
              <th class="text-center text-gray-700">Indikator</th>
              <th class="text-center text-gray-700">Target</th>
              <th class="text-center text-gray-700">Satuan</th>
              <th class="text-center text-gray-700">Keterangan</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody id="sub-tematik">
            <%= render 'tematiks/sub_tematik', sub_tematiks: @sub_tematiks %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
