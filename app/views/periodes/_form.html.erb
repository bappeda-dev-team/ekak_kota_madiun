<%= form_with(model: periode, local: false,
              data: { controller: 'form-ajax',
                      action: 'ajax:complete->form-ajax#afterSubmitRefresh'}) do |form| %>
  <% if periode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(periode.errors.count, "error") %> prohibited this periode from being saved:</h2>

      <ul>
        <% periode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tahun_awal, class: 'form-label' %>
    <%= form.text_field :tahun_awal, class: 'form-control' %>
