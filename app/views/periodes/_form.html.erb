  </div>

  <div class="field">
    <%= form.label :tahun_akhir, class: 'form-label' %>
    <%= form.text_field :tahun_akhir, class: 'form-control' %>
    <p class="invalid-feedback" data-form-ajax-target="errorContainer" data-error-type="tahun_akhir"></p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
