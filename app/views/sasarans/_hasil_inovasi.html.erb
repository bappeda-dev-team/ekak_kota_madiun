<div data-controller='editable-table'>
  <div class="form-edit d-none" data-editable-table-target="form" id="edit-inovasi-sasaran">
  </div>

  <table class="table table-bordered align-middle" data-editable-table-target="main">
    <thead>
      <tr>
        <th class="text-center">Judul Inovasi</th>
        <th class="text-center">Jenis Inovasi</th>
        <th class="text-center">Gambaran Nilai Kebaruan</th>
        <th class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-wrap align-middle judul-inovasi"><%= sasaran.metadata&.dig("inovasi_sasaran") %></td>
        <td class="align-middle jenis-inovasi"><%= sasaran.metadata&.dig("jenis_inovasi") %></td>
        <td class="text-wrap align-middle gambaran-inovasi"><%= sasaran.metadata&.dig("gambaran_nilai_kebaruan") %></td>
        <td class="align-middle">
          <%= link_to edit_inovasi_sasaran_path(sasaran),
           remote: true, class: 'btn btn-outline-info',
           data: {
             action: 'ajax:complete->editable-table#edit:prevent',
           } do %>
            <span class="fas fa-pencil"></span>
            <span>Edit Inovasi</span>
          <% end %>
      </tr>
    </tbody>
  </table>
</div>
