<tr data-controller="row">
  <td class="row-number" width="5%"><%= no %></td>
  <td class="text-wrap" width="90%"><%= tugas[1] %></td>
  <td>
    <div class="d-grid gap-2">
      <%= render(EditRowButtonComponent.new(
        title: 'Edit',
        path: edit_rincian_tugas_tim_kerja_path(tugas[0], no: no))
      ) %>
      <%= render(DeleteRowButtonComponent.new(
        message: 'Tugas yang dihapus tidak dapat digunakan kembali',
        path: hapus_rincian_tugas_tim_kerja_path(tugas[0]))
      ) %>
    </div>
  </td>
</tr>
