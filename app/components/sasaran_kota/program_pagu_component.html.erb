<div class="inner-table-pagu">
  <% if jenis_program == 'Sub Sasaran' %>
    <p class="p-3"><%= pagu_program %></p>
  <% else %>
    <table class="table p-0 m-0 inner-table">
      <thead>
        <tr>
          <th><%= jenis_program %></th>
          <th>PAGU ANGGARAN OPERATIONAL</th>
        </tr>
      </thead>
      <tbody>
        <% programs.each do |program| %>
          <tr>
            <td class="text-wrap"><%= program %></td>
            <td class="text-wrap">Rp. XX</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
